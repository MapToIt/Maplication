{
  "rules": {
    ".read": "auth != null",
    ".write": "auth != null",
  "event": {
     ".indexOn": ["date", "startTime"],
    ".validate": "newData.hasChildren(['name','date','startTime','endTime'])",
    "date": {
      ".validate": "newData.isString() &&
      newData.val().matches(/^(19|20)[0-9][0-9][-\\/. ](0[1-9]|1[012])[-\\/. ](0[1-9]|[12][0-9]|3[01])$/)"
      
    },
  "company": {
    ".indexOn": ["login"]
 		},
  "companyJobs": {
    ".indexOn": ["eventId", "companyId", "positions"]
 		},
  "map": {
     ".indexOn": ["eventId"],
    ".validate": "newData.hasChildren(['eventId'])"
  	},
  "table": {
     ".validate": "newData.hasChildren(['mapId'])"
    },
  "tableReserve": {
    ".validate": "newData.hasChildren(['companyId','tableId','startTime','endTime'])"
    },
   "notes": {
      ".indexOn": ["companyId", "eventId", "attendee"]
    }
  }
  }
  
}